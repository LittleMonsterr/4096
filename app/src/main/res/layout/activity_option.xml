<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#F9BEC0"
    android:orientation="vertical"
    tools:context="com.example.administrator.a2048.OptionActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设置"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"/>
    <!--白线条-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="棋盘行数"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/tv_optionactivity_lines"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_optionactivity_lines"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:background="@drawable/buttonoption_bg"
            android:id="@+id/bt_optionactivity_setlines"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="游戏目标"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/bt_optionactivity_setlines"
            android:layout_centerHorizontal="true"
            android:id="@+id/tv_optionactivity_targetscore"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_below="@id/tv_optionactivity_targetscore"
            android:layout_centerHorizontal="true"
            android:background="@drawable/buttonoption_bg"
            android:id="@+id/bt_optionactivity_setscore"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textSize="25sp"
            android:textColor="#555555"
            android:background="@drawable/buttonoption_bg"
            android:layout_alignParentLeft="true"
            android:id="@+id/bt_optionactivity_back"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成"
            android:textSize="25sp"
            android:textColor="#555555"
            android:background="@drawable/buttonoption_bg"
            android:layout_alignParentRight="true"
            android:id="@+id/bt_optionactivity_done"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="反馈邮箱：whispers_wy@163.com"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_margin="10dp"/>
   <!-- <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/adLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
    </LinearLayout>-->
</LinearLayout>
